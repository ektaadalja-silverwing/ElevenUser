<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SignInActivity">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/food"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1.5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_text"
                    android:textSize="@dimen/_25ssp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:padding="@dimen/_15sdp"/>

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:hint="@string/email"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:padding="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="text"
                    android:layout_marginTop="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:hint="@string/password"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/black"
                    android:padding="@dimen/_10sdp"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:layout_marginTop="@dimen/_10sdp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    >

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:checked="true"
                        android:textOff="OFF"
                        android:textOn="ON" />
                    <TextView
                        android:id="@+id/tvRemeber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remenber"
                        android:layout_toRightOf="@id/switch1"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12ssp"/>
                    <TextView
                        android:id="@+id/tvForgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tvRemeber"
                        android:textSize="@dimen/_14ssp"
                        android:text="@string/forgot"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btnSignIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_in"
                    android:background="@drawable/btn_primary"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:textSize="@dimen/_14ssp"/>
                <RelativeLayout
                    android:id="@+id/btn_sign_up_now"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_sign_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Don't have an account? "
                        android:textColor="@color/grey_60"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/tv_signed_up_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_sign_up"
                        android:text="Sign Up Now"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_15sdp">
                    <View
                        android:id="@+id/view1"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="0.5dp"
                        android:background="@color/black"
                        android:layout_marginTop="@dimen/_8sdp"
                        />
                    <TextView
                        android:id="@+id/tvOr"
                        android:layout_toRightOf="@id/view1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/or"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/_5sdp"/>
                    <View
                        android:id="@+id/view2"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="0.5dp"
                        android:background="@color/black"
                        android:layout_toRightOf="@id/tvOr"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_5sdp" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_20sdp">

                    <ImageView
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_facebook"
                        android:src="@drawable/ic_facebook"
                        android:padding="@dimen/_12sdp"
                        android:tint="@color/white"/>
                    <ImageView
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_twiter"
                        android:src="@drawable/ic_twitter"
                        android:padding="@dimen/_12sdp"
                        android:tint="@color/white"/>
                    <ImageView
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_google"
                        android:src="@drawable/ic_google"
                        android:tint="@color/white"
                        android:padding="@dimen/_12sdp"
                        />
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
