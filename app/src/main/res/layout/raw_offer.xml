<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/_4sdp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pizza_img"
                android:scaleType="fitXY"/>
            <TextView
            android:id="@+id/tvOfferTag"
            android:layout_width="@dimen/_52sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="@string/offer"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/bg_square"
            android:layout_margin="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/imgBranchLogo"
                android:layout_width="93dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="212dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toRightOf="@id/tvOfferTag"
                android:src="@drawable/offer_icone" />
            <TextView
                android:id="@+id/tvOfferDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/offer_description"
                android:textColor="@color/white"
                android:layout_below="@id/tvOfferTag"
                android:textStyle="bold"
                android:textSize="@dimen/_18ssp"
                android:layout_marginTop="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_10sdp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>