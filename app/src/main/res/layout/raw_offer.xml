<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pizza_img"
                android:scaleType="fitXY"/>
            <TextView
            android:id="@+id/tvOfferTag"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="@string/offer"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/bg_square"
            android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tvOfferDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="45% OFF! COUPON'STAR200'"
                android:textColor="@color/white"
                android:layout_below="@id/tvOfferTag"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_3sdp"/>
            <TextView
                android:id="@+id/tvResturentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rest_name"
                android:textColor="@color/white"
                android:layout_below="@id/tvOfferDesc"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>